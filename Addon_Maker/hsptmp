				pos (640/2)-(Addon_Img_Dead_End__Right__Size_x/2), (480/2)-(Addon_Img_Dead_End__Right__Size_y/2) : gcopy 1002, Addon_Img_Dead_End__Right__Top_Left_x, Addon_Img_Dead_End__Right__Top_Left_y, Addon_Img_Dead_End__Right__Bottom_Right_x, Addon_Img_Dead_End__Right__Bottom_Right_y
			}
			if road_img_type = "Intersection_T" {
				gmode 4, (Addon_Img_Intersection_T__Right_Top_Bottom__Bottom_Right_x - Addon_Img_Intersection_T__Right_Top_Bottom__Top_Left_x), (Addon_Img_Intersection_T__Right_Top_Bottom__Bottom_Right_y - Addon_Img_Intersection_T__Right_Top_Bottom__Top_Left_y), 256
				pos (640/2)-(Addon_Img_Intersection_T__Right_Top_Bottom__Size_x/2), (480/2)-(Addon_Img_Intersection_T__Right_Top_Bottom__Size_y/2) : gcopy 1002, Addon_Img_Intersection_T__Right_Top_Bottom__Top_Left_x, Addon_Img_Intersection_T__Right_Top_Bottom__Top_Left_y, Addon_Img_Intersection_T__Right_Top_Bottom__Bottom_Right_x, Addon_Img_Intersection_T__Right_Top_Bottom__Bottom_Right_y
			}
			if road_img_type = "Turn" {
				gmode 4, (Addon_Img_Turn__Right_Bottom__Bottom_Right_x - Addon_Img_Turn__Right_Bottom__Top_Left_x), (Addon_Img_Turn__Right_Bottom__Bottom_Right_y - Addon_Img_Turn__Right_Bottom__Top_Left_y), 256
				pos (640/2)-(Addon_Img_Turn__Right_Bottom__Size_x/2), (480/2)-(Addon_Img_Turn__Right_Bottom__Size_y/2) : gcopy 1002, Addon_Img_Turn__Right_Bottom__Top_Left_x, Addon_Img_Turn__Right_Bottom__Top_Left_y, Addon_Img_Turn__Right_Bottom__Bottom_Right_x, Addon_Img_Turn__Right_Bottom__Bottom_Right_y
			}
		}
	
	/*回転ボタン*/
		if road_img_type != "Intersection_Cross" and road_img_type != "Under_Construction" {
			objimage 17 : objsize 32, 32
			pos (640/2)-(32/2), 420 : button "", *Preview_Road_turn
		}
	
	stop
	
*Preview_Road_turn
	Preview_Dire ++
	
	if (road_img_type = "Dead_End" or road_img_type = "Intersection_T" or road_img_type = "Turn") and Preview_Dire > 3 {
		Preview_Dire = 0
	} else : if (road_img_type = "Default" or road_img_type = "Train_Crossing") and Preview_Dire > 1 {
		Preview_Dire = 0
	}
	
	goto *Preview_Road


*open_img__Default
	road_img_type = "Default"
	goto *open_img
*open_img__Train_Crossing
	road_img_type = "Train_Crossing"
	goto *open_img
*open_img__Dead_End
	road_img_type = "Dead_End"
	goto *open_img
*open_img__Intersection_T
	road_img_type = "Intersection_T"
	goto *open_img
*open_img__Turn
	road_img_type = "Turn"
	goto *open_img
*open_img__Intersection_Cross
	road_img_type = "Intersection_Cross"
	goto *open_img
*open_img__Under_Construction
	road_img_type = "Under_Construction"
	goto *open_img
	
*open_img
	dialog "png;*.bmp;*.jpg;*.jpeg;*.gif", 16, "画像ファイル"
	
	if stat = 1 {
		if Addon_Type_tmp != "road" and Addon_Type_tmp != "railroad" and Addon_Type_tmp != "station" {
			Addon_Img_Null__Path = refstr
			objprm input_stat__Addon_Img_Null__Path, Addon_Img_Null__Path
		
			celload Addon_Img_Null__Path, 1002
			buffer_1002 = 1

		} else : if Addon_Type_tmp = "road" or Addon_Type_tmp = "railroad" {
			if road_img_type = "Default" {
				Addon_Img_Default__Path = refstr
				objprm input_stat__Addon_Img_Default__Path, Addon_Img_Default__Path
				
				celload Addon_Img_Default__Path, 1002
				buffer_1002 = 1
			} else : if road_img_type = "Train_Crossing" {
				Addon_Img_Train_Crossing__Path = refstr
				objprm input_stat__Addon_Img_Train_Crossing__Path, Addon_Img_Train_Crossing__Path
				
				celload Addon_Img_Train_Crossing__Path, 1002
				buffer_1002 = 1
			} else : if road_img_type = "Dead_End" {
				Addon_Img_Dead_End__Path = refstr
				objprm input_stat__Addon_Img_Dead_End__Path, Addon_Img_Dead_End__Path
				
				celload Addon_Img_Dead_End__Path, 1002
				buffer_1002 = 1
			} else : if road_img_type = "Intersection_T" {
				Addon_Img_Intersection_T__Path = refstr
				objprm input_stat__Addon_Img_Intersection_T__Path, Addon_Img_Intersection_T__Path
				
				celload Addon_Img_Intersection_T__Path, 1002
				buffer_1002 = 1
			} else : if road_img_type = "Turn" {
				Addon_Img_Turn__Path = refstr
				objprm input_stat__Addon_Img_Turn__Path, Addon_Img_Turn__Path
				
				celload Addon_Img_Turn__Path, 1002
				buffer_1002 = 1
			} else : if road_img_type = "Intersection_Cross" {
				Addon_Img_Intersection_Cross__Path = refstr
				objprm input_stat__Addon_Img_Intersection_Cross__Path, Addon_Img_Intersection_Cross__Path
				
				celload Addon_Img_Intersection_Cross__Path, 1002
				buffer_1002 = 1
			} else : if road_img_type = "Under_Construction" {
				Addon_Img_Under_Construction__Path = refstr
				objprm input_stat__Addon_Img_Under_Construction__Path, Addon_Img_Under_Construction__Path
				
				celload Addon_Img_Under_Construction__Path, 1002
				buffer_1002 = 1
			}
		}
	}
	
	return
	
	
*hinto
	clrobj
	color 50, 50, 50 : boxf
	
	onclick gosub *hinto_onclick
	
	/*戻るボタンとページタイトル*/
		objimage 5
